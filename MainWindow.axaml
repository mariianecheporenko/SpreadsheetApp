<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="SpreadsheetApp.MainWindow"
        Title="Табличний редактор — Лабораторна"
        Width="900" Height="600">
  <DockPanel Margin="8">
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="8">
      <TextBlock VerticalAlignment="Center" Text="Рядки:"/>
      <TextBox Name="RowsBox" Width="50"/>
      <TextBlock VerticalAlignment="Center" Text="Стовпці:"/>
      <TextBox Name="ColsBox" Width="50"/>
      <Button Name="ResizeBtn" Content="Змінити розмір" />
      <ToggleButton Name="ShowValuesToggle" Content="Показати значення" />
      <Button Name="SaveBtn" Content="Зберегти..." />
      <Button Name="LoadBtn" Content="Завантажити..." />
      <Button Name="HelpBtn" Content="Довідка" />
    </StackPanel>

    <ScrollViewer>
      <StackPanel Name="GridPanel" />
    </ScrollViewer>
  </DockPanel>
</Window>


